{
    "semi": true,
    "singleQuote": false,
    "jsxSingleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "singleAttributePerLine": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "bracketSameLine": true,
                "singleAttributePerLine": false
            }
        }
    ]
